body {
  background: #EFEFEF;
}

section {
  max-width: 850px;
}

.mdl-card__title {
  background: rgba(255, 165, 0, 0.7);
}

<% if (current.source === "index") { %>
.loading > .mdl-card__supporting-text {
  position: absolute;
  top: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.posts-enter-active, .posts-leave-active {
  transition: all 0.5s;
}

.posts-enter, .posts-leave-to {
  opacity: 0.3;
  transform: translateX(-1em);
}

.posts-move {
  transition: transform 0.5s;
}
<% } %>

transition-group {
  display: none !important;
}
