<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title>新規作成 - 支援隊ヌーボー</title>

  <%- include('partial/head.ejs') %>

  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>

  <%- include('partial/head-script.ejs') %>  
</head>
<body>
<%- include('partial/header.ejs') %>

<div class="container" id="app">
  <post-form-card heading="Creating a new post" v-model="post" @submit.prevent="onCreate" @reset.prevent="onReset">
    <button class="btn" type="submit">Submit</button>
    <button class="btn-flat" type="reset">Reset</button>
    <button class="btn-flat" @click.prevent="onLogout">Logout</button>
  </post-form-card>

  <post-cards :posts="[post]" :ready="true"></post-cards>

  <login-form :show="user === null" @submit="onLogin"></login-form>
</div>

<%- include('partial/footer.ejs') %>

<script src="create.js"></script>
</body>
</html>