body {
  background: #EFEFEF;
}

section {
  max-width: 850px;
}

.mdl-card__title, .mdl-layout__header {
  background: rgb(255, 175, 57);
}

.posts-enter-active, .posts-leave-active {
  transition: all 0.5s;
}

.posts-enter, .posts-leave-to {
  opacity: 0.3;
  transform: translateX(-1em);
}

.posts-move {
  transition: transform 0.5s;
}

transition-group {
  display: none !important;
}

.mdl-layout__title {
  font-size: 32px;
}
